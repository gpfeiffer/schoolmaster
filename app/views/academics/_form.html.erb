<%= form_for(@academic) do |f| %>
  <% if @academic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@academic.errors.count, "error") %> prohibited this academic from being saved:</h2>

      <ul>
      <% @academic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <div class="field">
      <tr>
	<td>
	  <%= f.label :title %>
	</td>
	<td>
	  <%= f.select :title, TITLES, :include_blank => true %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :first %>
	</td>
	<td>
	  <%= f.text_field :first %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :last %>
	</td>
	<td>
	  <%= f.text_field :last %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :school %>
	</td>
	<td>
	  <%= f.select :school, SCHOOLS, :include_blank => true %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :work_phone %>
	</td>
	<td>
	  <%= f.text_field :work_phone %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :work_mail %>
	</td>
	<td>
	  <%= f.text_field :work_mail, :size => 16 %>
	  @nuigalway.ie
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :home_url %>
	</td>
	<td>
	  <%= f.text_field :home_url %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :image_url %>
	</td>
	<td>
	  <%= f.text_field :image_url %>
