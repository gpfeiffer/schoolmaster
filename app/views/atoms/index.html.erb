<h1>Atoms</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Title</th>
    <th>Hours</th>
    <th>Semester</th>
    <th>Discipline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @atoms.each do |atom| %>
  <tr>
    <td><%= link_to atom.code, atom %></td>
    <td><%= atom.title %></td>
    <td><%= atom.hours %></td>
    <td><%= atom.semester %></td>
    <td><%= atom.discipline %></td>
    <td><%= link_to 'Destroy', atom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

