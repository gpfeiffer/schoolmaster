<% project = direction.project %>
<div class="mark"><b> <%= project.total_mark %></b><%= "(Penalties applied: ...)" if project.penalties %></div>
&nbsp;
  <div style="display:inline"<%= raw ' class="alert"' if project.critical? %>> <%= project.author.registration %>: <%= project.author %>.</div> 

<h3><%= link_to_unless_current project.title, project %></h3>

<%= content_tag :div, :class => (direction.open? ? "unlocked" : "locked") do %>
  <table class="dates">
    <tr><td>Midterm Report</td><td> <%= direction.midterm_mark %></td></tr>
    <tr><td>Presentation</td><td> <%= direction.presentation_mark %></td></tr>
    <tr><td>Report</td><td> <%= direction.report_mark %></td></tr>
  </table>
  <b><%= project.supervisor %> (Supervisor):</b>
  <%= direction.comment %>
  <br />
<% end %>
<% project.examinations.each do |examination| %>
  <%= content_tag :div, :class => (examination.open? ? "unlocked" : "locked") do %>
    <table class="dates">
      <tr><td>Presentation</td><td> <%= examination.presentation_mark %></td></tr>
      <tr><td>Report</td><td> <%= examination.report_mark %></td></tr>
    </table>
    <b><%= examination.academic %> (Examiner):</b>
    <%= examination.comment %>
    <br />
  <% end %>
<% end %>

<hr />
<br />
