<h1>Listing instances</h1>

<table>
  <tr>
    <th>Cohort</th>
    <th>Atom</th>
    <th>Course</th>
    <th>Code</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @instances.each do |instance| %>
  <tr>
    <td><%= instance.cohort %></td>
    <td><%= instance.atom_id %></td>
    <td><%= instance.course_id %></td>
    <td><%= instance.code %></td>
    <td><%= instance.status %></td>
    <td><%= link_to 'Show', instance %></td>
    <td><%= link_to 'Edit', edit_instance_path(instance) %></td>
    <td><%= link_to 'Destroy', instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

