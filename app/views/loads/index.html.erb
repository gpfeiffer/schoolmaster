<h3>Loads</h3>

<% @loads.group_by(&:year).sort.reverse.each do |year, loads_by_year| %>

<div class="volatile">
<h1>Teaching Load <%= year %>. (<%= loads_by_year.map(&:hours).sum %> hrs)</h1>

<table>
<% loads_by_year.group_by(&:academic).sort_by { |academic, loads| academic.last }.each do |academic, loads| %>
  <% total = loads.map(&:hours).sum %>
<tr>
  <td></td>
  <td><b><%= link_to academic, academic %></b></td>
  <td align="right"><%= total %></td>
  <td width="300">  
    <svg height="10"><rect width="<%= total %>" height="10" style="fill:rgb(255,0,0);"/></svg>
  </td>
</tr>
<% loads.each do |load| %>
<tr class="volatile">
  <td><%= link_to load.code, load %></td>
  <td><%= load.title %></td>
  <td align="right"><%= load.hours %></td>
</tr>
<% end %>
<% end %>
</table>
<% end %>
</div>
