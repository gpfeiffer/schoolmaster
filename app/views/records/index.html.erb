<h1>Listing <%= Record.all.count %> records</h1>

<table>
  <tr>
    <th>Academic</th>
    <th>Broker</th>
    <th>Authorid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.academic_id %></td>
    <td><%= record.broker_id %></td>
    <td><%= record.authorid %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

