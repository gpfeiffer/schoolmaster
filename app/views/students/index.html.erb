<div id="main">
<h1>Graduate Students</h1>

<h2><%= @students.count %> Current Students</h2>

<table>
<% @students.each do |student| %>
  <tr>
    <td><%= link_to student, student %></td>
    <td><%= student.registration %></td>
    <td><%= student.programme %></td>
    <td><%= student.room %></td>
    <td><%= student.work_phone %></td>
  </tr>
<% end %>
</table>

<h2><%= @former_students.count %> Former Students</h2>

<table>
<% @former_students.each do |student| %>
  <tr>
    <td><%= image_tag student.image_url, :size => "16x16", :alt => '[img]' %></td>
    <td><%= link_to student, student %></td>
    <td><%= student.registration %></td>
    <td><%= student.programme %></td>
    <td><%= student.room %></td>
    <td><%= student.work_phone %></td>
  </tr>
<% end %>
</table>

<br />

<%= mail_to @students.map(&:email).join(','), "Mail current", :cc => "goetz.pfeiffer@nuigalway.ie" %> 
<% if can? :create, Student %>
  | <%= link_to 'New Student', new_student_path %>
<% end %>
</div>
