<div id="side">
  <h3>Graduate Students</h3>
  <ul><%= render Student.all %></ul>
</div>
<div id="main">

<p id="notice"><%= notice %></p>

<h2><%= @student %></h2>

<%= image_tag @student.photo_url, :align => :right, :size => "96x96", :alt => "[image]" %>

<p>
  <%= @student.programme %>
  (<%= @student.status %>)
</p>

<hr />
<p>
  <%= @student.registration || '... add student id ...' %>
  | x<%= @student.work_phone %>
  | <%= @student.email %>
<% if not @student.home_url.blank? %>
  | <%= @student.home_url %>
<% end %>
  | <%= @student.location %>
</p>
<hr />

<p>
  <b>Dissertation Title:</b>
  <%= @student.title %>
</p>

<p>
  <b>Research Interests:</b>
  <%= @student.interests %>
</p>

<p>
  <b>Funding Source:</b>
  <%= @student.funder %>
</p>


<table class="dates">
<tr>
  <th>Started on:</th>
  <td><%= @student.started_on %></td>
</tr>
<tr>
  <th>Expected on:</th>
  <td><%= @student.expected_on %></td>
</tr>
<tr>
  <th>Completed on:</th>
  <td><%= @student.completed_on %></td>
</tr>
</table>

<h3><%= 'Supervisor'.pluralize @student.supervisions.count %></h3>

<ul>
<% @student.supervisions.each do |s| %>
<li><%= link_to s.academic, s.academic %> (<%= s.status %>)</li>
<% end %>
</ul>

<hr />


<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Delete', @student, :method => :delete, :data => { :confirm => 'Are you sure?' } %> |
<%= link_to 'Back', students_path %>

</div>
